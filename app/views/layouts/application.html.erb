<!DOCTYPE html>
<html>
<title>Brs</title>
<meta name="viewport" content="width=device-width,initial-scale=1">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
<%= javascript_importmap_tags %>
<%# ADDONS %>
<body>
<%= render "home/header" %>
<% if notice %>
  <div class="flex justify-between text-green-200 shadow-inner rounded p-3 bg-green-600">
    <p class="self-center">
      <strong>Notice </strong><%= notice %>
    </p>
    <strong class="text-xl align-center cursor-pointer alert-del">&times;</strong>
  </div>
<% end %>
<% if alert %>
  <div class="flex justify-between text-blue-200 shadow-inner rounded p-3 bg-blue-600">
    <p class="self-center"><strong>Alert </strong><%= alert %>></p>
    <strong class="text-xl align-center cursor-pointer alert-del">&times;</strong>
  </div>
<% end %>
<%= yield %>
<%= render "home/footer" %>
</body>

</html>

